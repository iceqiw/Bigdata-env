        <value>true</value>
    </property>
    <property>
        <name>yarn.nodemanager.amrmproxy.interceptor-class.pipeline</name>
        <value>org.apache.hadoop.yarn.server.nodemanager.amrmproxy.FederationInterceptor</value>
